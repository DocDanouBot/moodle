{{!
    @template local_lai_connector/comp_legend_infoclass
    I display some more additional information on the status of the LAI connector.
}}

<table id="lai_comp_legend" class="resultlist">
    <thead>
        <tr>
            <th colspan="2" style="border:0;"><h3>{{#str}}legend_comp_title, local_lai_connector{{/str}}</h3></th>
        </tr>
        <tr>
            <th>{{#str}}legend_comp_main, local_lai_connector{{/str}}</th>
            <th>{{#str}}legend_comp_description, local_lai_connector{{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#legend}}
        <tr class="{{{cssclass}}}">
            <td>{{{identifier}}}</td>
            <td>{{{description}}}</td>
        </tr>
    {{/legend}}
    {{^legend}}
        <tr>
            <td colspan="2">{{#str}}legend_comp_noneavailable, local_lai_connector{{/str}}</td>
        </tr>
    {{/legend}}
    </tbody>
</table>
