{{!
    @template local_lai_connector/comp_testbuttons
    I display some buttons so you can test the functionality of the API
}}

<table id="lai_comp_subpage" class="resultlist">
    <thead>
        <tr>
            <th colspan="2" style="border:0;"><h3>{{#str}}button_api_title_indexpage, local_lai_connector{{/str}}</h3></th>
        </tr>
    </thead>
    <tbody>
    {{#subpages}}
    <tr>
        <td><a href="{{subpagelink}}" class="btn btn-primary">
            <span>{{subpagename}} <i class="icon fa {{subpageicon}}"></i></span>
        </a>
        </td>
        <td>{{subpageinfo}}</td>
    </tr>
    {{/subpages}}
    {{^subpages}}
        <tr>
            <td colspan="2">{{#str}}button_subpage_none, local_lai_connector{{/str}}</td>
        </tr>
    {{/subpages}}
    </tbody>
</table>
